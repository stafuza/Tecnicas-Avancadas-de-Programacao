@model IEnumerable<TrabalhoAv1.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <h1>Lista de Clientes</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">Novo Cliente</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Sexo</th>
                <th>Idade</th>
                <th>Data Nascimento</th>
                <th>Cidade</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Sexo</td>
                    <td>@item.Idade</td>
                    <td>@item.DataNasc.ToString("dd/MM/yyyy")</td>
                    <td>@item.Cidade?.Nome</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 