@model IEnumerable<TrabalhoAv1.Models.Estado>

@{
    ViewData["Title"] = "Estados";
}

<div class="container mt-4">
    <h1>Lista de Estados</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">Novo Estado</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Sigla</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Sigla</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EstadoId" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.EstadoId" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.EstadoId" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 